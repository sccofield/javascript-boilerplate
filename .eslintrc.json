{
  "root": true,
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
  }
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "jest": true
},
"rules": {
  "max-len": ["error", {
    "code": 80,
    "ignoreComments": true,
    "ignoreUrls": true,
    "ignoreStrings": true,
    "ignoreTemplateLiterals": true
    }]
}

}
